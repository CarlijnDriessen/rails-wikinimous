<div class="border-bottom">
  <h1 class="mb-3"><%= @article.title %>
    <small>
      <%= link_to edit_article_path(@article) do %><i class="fa-solid fa-pencil"></i><% end %>
      <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-regular fa-trash-can"></i>
      <% end %>
    </small>
  </h1>
</div>
<p class="mt-3"><%= @article.content %></p>
